import React, { useState, useEffect } from 'react';
import { CalendarIcon, Spinner, CheckCircleIcon, XCircleIcon } from './Icons';
import { User } from '../types';
import VisualTimetableEditor from './VisualTimetableEditor';

interface TimetableManagementViewProps {
    onBack: () => void;
    user: User;
}

interface TimeSlot {
    time: string;
    subject: string;
    teacher: string;
    room: string;
}

interface DaySchedule {
    [day: string]: TimeSlot[];
}

interface Timetable {
    id: string;
    _id?: string; // MongoDB ID (if present)
    branch: string;
    section: string;
    semester: string;
    days: DaySchedule;
    uploadedAt?: string;
    uploadDate?: string;
    lastUpdated?: string;
    createdAt?: string;
}

const TimetableManagementView: React.FC<TimetableManagementViewProps> = ({ onBack, user }) => {
    console.log('TimetableManagementView rendering...', { user });
    
    const token = localStorage.getItem('authToken');
    const [timetables, setTimetables] = useState<Timetable[]>([]);
    const [loadingTimetables, setLoadingTimetables] = useState(true);
    const [successMessage, setSuccessMessage] = useState<string | null>(null);
    const [errorMessage, setErrorMessage] = useState<string | null>(null);
    const [viewingTimetable, setViewingTimetable] = useState<Timetable | null>(null);
    const [showExistingTable, setShowExistingTable] = useState(false);

    // Fetch existing timetables
    const fetchTimetables = async () => {
        if (!token) {
            setLoadingTimetables(false);
            return;
        }
        
        try {
            const response = await fetch('http://localhost:3001/api/timetables/class', {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (response.ok) {
                const data = await response.json();
                console.log('Fetched timetables:', data);
                if (data.length > 0) {
                    console.log('First timetable structure:', Object.keys(data[0]));
                    console.log('First timetable full data:', data[0]);
                }
                setTimetables(data);
            }
        } catch (error) {
            console.error('Error fetching timetables:', error);
        } finally {
            setLoadingTimetables(false);
        }
    };

    // Delete timetable
    const handleDeleteTimetable = async (id: string, branch: string, section: string, semester: string) => {
        if (!confirm(`Delete timetable for ${branch} - Semester ${semester}, Section ${section}?`)) {
            return;
        }

        try {
            console.log('Deleting timetable:', { id, branch, section, semester });
            const response = await fetch(`http://localhost:3001/api/timetables/class/${id}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            console.log('Delete response:', response.status, response.statusText);
            
            if (response.ok) {
                setSuccessMessage('Timetable deleted successfully!');
                fetchTimetables();
                setTimeout(() => setSuccessMessage(null), 3000);
            } else {
                const errorData = await response.json().catch(() => ({ detail: 'Unknown error' }));
                console.error('Delete failed:', errorData);
                setErrorMessage(`Failed to delete timetable: ${errorData.detail || errorData.message || 'Unknown error'}`);
                setTimeout(() => setErrorMessage(null), 5000);
            }
        } catch (error) {
            console.error('Delete error:', error);
            setErrorMessage(`Failed to delete timetable: ${error instanceof Error ? error.message : 'Network error'}`);
            setTimeout(() => setErrorMessage(null), 5000);
        }
    };

    // Load timetables on mount
    useEffect(() => {
        fetchTimetables();
    }, []);

    return (
        <div className="bg-gray-50 dark:bg-gray-700/50 p-6 rounded-lg shadow-sm space-y-6">
            {/* Header */}
            <div className="flex justify-between items-center">
                <div className="flex items-center space-x-3">
                    <div className="bg-indigo-100 dark:bg-indigo-900/50 p-3 rounded-full">
                        <CalendarIcon className="w-6 h-6 text-indigo-600 dark:text-indigo-400" />
                    </div>
                    <h3 className="text-xl font-semibold text-gray-800 dark:text-white">
                        {user.role === 'Teacher' ? 'My Teaching Schedule' : 'Student Class Timetable Management'}
                    </h3>
                </div>
                <button 
                    onClick={onBack} 
                    className="text-sm font-semibold text-indigo-600 dark:text-indigo-400 hover:underline"
                >
                    &larr; Back to Dashboard
                </button>
            </div>

            {/* Success Message */}
            {successMessage && (
                <div className="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
                    <div className="flex items-center">
                        <CheckCircleIcon className="w-5 h-5 text-green-600 dark:text-green-400 mr-2" />
                        <span className="text-sm text-green-800 dark:text-green-300">{successMessage}</span>
                    </div>
                </div>
            )}

            {/* Error Message */}
            {errorMessage && (
                <div className="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
                    <div className="flex items-center">
                        <XCircleIcon className="w-5 h-5 text-red-600 dark:text-red-400 mr-2" />
                        <span className="text-sm text-red-800 dark:text-red-300">{errorMessage}</span>
                    </div>
                </div>
            )}

            {/* Existing Timetables */}
            <div className="bg-white dark:bg-gray-800 p-6 rounded-lg shadow border border-gray-200 dark:border-gray-700">
                <div className="flex justify-between items-center mb-4">
                    <h4 className="text-lg font-semibold text-gray-800 dark:text-white">
                        {user.role === 'Teacher' ? 'My Timetables' : 'Existing Timetables'} ({timetables.length})
                    </h4>
                    <div className="flex gap-2">
                        <button
                            onClick={() => setShowExistingTable(!showExistingTable)}
                            className="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition-colors"
                        >
                            {showExistingTable ? 'üëÅÔ∏è Hide Table' : 'üëÅÔ∏è Show Table'}
                        </button>
                        <button
                            onClick={fetchTimetables}
                            className="text-sm text-indigo-600 dark:text-indigo-400 hover:underline"
                        >
                            üîÑ Refresh
                        </button>
                    </div>
                </div>

                {showExistingTable && (loadingTimetables ? (
                    <div className="flex justify-center py-8">
                        <Spinner className="w-10 h-10" />
                    </div>
                ) : timetables.length === 0 ? (
                    <div className="text-center py-8 text-gray-500 dark:text-gray-400">
                        <CalendarIcon className="w-16 h-16 mx-auto mb-3 opacity-50" />
                        <p>{user.role === 'Teacher' ? 'You have not uploaded any timetables yet.' : 'No timetables uploaded yet.'}</p>
                        <p className="text-sm mt-1">Use the editor below to create your first timetable.</p>
                    </div>
                ) : (
                    <div className="overflow-x-auto">
                        <table className="w-full">
                            <thead className="bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-600">
                                <tr>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Branch
                                    </th>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Semester
                                    </th>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Section
                                    </th>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Classes
                                    </th>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Uploaded
                                    </th>
                                    <th className="px-4 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody className="divide-y divide-gray-200 dark:divide-gray-700">
                                {timetables.map((timetable) => {
                                    const totalClasses = timetable.days 
                                        ? Object.values(timetable.days).reduce(
                                            (sum, classes) => sum + (classes as any[]).length,
                                            0
                                          )
                                        : 0;
                                    return (
                                        <tr key={timetable._id} className="hover:bg-gray-50 dark:hover:bg-gray-700/30">
                                            <td className="px-4 py-3 text-sm text-gray-800 dark:text-gray-200">
                                                {timetable.branch}
                                            </td>
                                            <td className="px-4 py-3 text-sm text-gray-800 dark:text-gray-200">
                                                Semester {timetable.semester}
                                            </td>
                                            <td className="px-4 py-3 text-sm text-gray-800 dark:text-gray-200">
                                                Section {timetable.section}
                                            </td>
                                            <td className="px-4 py-3 text-sm text-gray-800 dark:text-gray-200">
                                                {totalClasses} classes
                                            </td>
                                            <td className="px-4 py-3 text-sm text-gray-500 dark:text-gray-400">
                                                {(() => {
                                                    const date = timetable.createdAt || timetable.uploadedAt || timetable.uploadDate || timetable.lastUpdated;
                                                    return date ? new Date(date).toLocaleDateString() : 'N/A';
                                                })()}
                                            </td>
                                            <td className="px-4 py-3 text-sm space-x-2">
                                                <button
                                                    onClick={() => setViewingTimetable(timetable)}
                                                    className="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium"
                                                >
                                                    üëÅÔ∏è View
                                                </button>
                                                <button
                                                    onClick={() => handleDeleteTimetable(
                                                        timetable.id,
                                                        timetable.branch,
                                                        timetable.section,
                                                        timetable.semester
                                                    )}
                                                    className="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 font-medium"
                                                >
                                                    üóëÔ∏è Delete
                                                </button>
                                            </td>
                                        </tr>
                                    );
                                })}
                            </tbody>
                        </table>
                    </div>
                ))}
            </div>

            {/* Timetable Viewer Modal */}
            {viewingTimetable && (
                <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
                    <div className="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-6xl w-full max-h-[90vh] overflow-y-auto">
                        <div className="sticky top-0 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 p-6">
                            <div className="flex justify-between items-center">
                                <div>
                                    <h3 className="text-2xl font-bold text-gray-900 dark:text-white">
                                        {viewingTimetable.branch}
                                    </h3>
                                    <p className="text-gray-600 dark:text-gray-400 mt-1">
                                        Semester {viewingTimetable.semester} - Section {viewingTimetable.section}
                                    </p>
                                </div>
                                <button
                                    onClick={() => setViewingTimetable(null)}
                                    className="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 text-2xl"
                                >
                                    ‚úï
                                </button>
                            </div>
                        </div>
                        
                        <div className="p-6">
                            {viewingTimetable.days && Object.keys(viewingTimetable.days).length > 0 ? (
                                <div className="space-y-6">
                                    {Object.entries(viewingTimetable.days).map(([day, slots]) => (
                                        slots && slots.length > 0 && (
                                            <div key={day} className="bg-gray-50 dark:bg-gray-700/30 rounded-lg p-4">
                                                <h4 className="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                                                    {day}
                                                </h4>
                                                <div className="space-y-2">
                                                    {slots.map((slot: any, index: number) => (
                                                        <div key={index} className="bg-white dark:bg-gray-800 rounded-lg p-3 border border-gray-200 dark:border-gray-600">
                                                            <div className="grid grid-cols-2 md:grid-cols-4 gap-3 text-sm">
                                                                <div>
                                                                    <span className="text-gray-500 dark:text-gray-400">Time:</span>
                                                                    <span className="ml-2 font-medium text-gray-900 dark:text-white">
                                                                        {slot.time || 'N/A'}
                                                                    </span>
                                                                </div>
                                                                <div>
                                                                    <span className="text-gray-500 dark:text-gray-400">Subject:</span>
                                                                    <span className="ml-2 font-medium text-gray-900 dark:text-white">
                                                                        {slot.subject || 'N/A'}
                                                                    </span>
                                                                </div>
                                                                <div>
                                                                    <span className="text-gray-500 dark:text-gray-400">Teacher:</span>
                                                                    <span className="ml-2 font-medium text-gray-900 dark:text-white">
                                                                        {slot.teacher || 'N/A'}
                                                                    </span>
                                                                </div>
                                                                <div>
                                                                    <span className="text-gray-500 dark:text-gray-400">Room:</span>
                                                                    <span className="ml-2 font-medium text-gray-900 dark:text-white">
                                                                        {slot.room || 'N/A'}
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    ))}
                                                </div>
                                            </div>
                                        )
                                    ))}
                                </div>
                            ) : (
                                <p className="text-center text-gray-500 dark:text-gray-400">No timetable data available</p>
                            )}
                        </div>
                    </div>
                </div>
            )}

            {/* Visual Editor */}
            <VisualTimetableEditor
                onSave={async (data) => {
                    if (!token) {
                        setErrorMessage('Please login to continue');
                        throw new Error('No auth token');
                    }
                    try {
                        const response = await fetch('http://localhost:3001/api/timetables/class/manual', {
                            method: 'POST',
                            headers: {
                                'Authorization': `Bearer ${token}`,
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(data),
                        });
                        if (!response.ok) throw new Error('Failed to save');
                        setSuccessMessage('Timetable saved successfully! üéâ');
                        fetchTimetables();
                        setTimeout(() => setSuccessMessage(null), 5000);
                    } catch (error) {
                        setErrorMessage('Failed to save timetable');
                        throw error;
                    }
                }}
                onCancel={onBack}
            />
        </div>
    );
};

export default TimetableManagementView;
